/* component/list/list.wxss */

.fl {
  float: left;
}

.fr {
  float: right;
}

.hideText {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.list {
  padding: 0 0.6rem;
  text-align: left;
}

.li {
  height: 4.2rem;
  padding: 0.6rem 0;
  border-top: 1px solid #eee;
  overflow: hidden;
}

.li_logo {
  width: 18%;
  height: 100%;
  text-align: center;
}

.li_logo_img {
  width: 3rem;
  height: 3rem;
  margin-top: 0.6rem;
}

.li_introduce {
  width: 75%;
  padding-left: 0.6rem;
  line-height: 1.4rem;
  font-size: 0.9rem;
  background: url(data:image/png;base64,) no-repeat right center / 0.6rem auto;
}

.p_name {
  font-size: 1rem;
}

.p_summary {
  color: #999;
}

.blue {
  color: #049aef;
}

.li .blue:first-child {
  margin-right: 0.4rem;
}
